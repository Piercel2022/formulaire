<%= form_with model: @inscription do |f| %>

  <%= f.label :first_name, "Prénom" %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name, "Nom" %>
  <%= f.text_field :last_name %>

  <%= f.label :address, "Adresse" %>
  <%= f.text_area :address %>

  <%= f.label :email, "Adresse e-mail" %>
  <%= f.email_field :email %>

  <%= f.label :phone_number, "Numéro de téléphone" %>
  <%= f.text_field :phone_number %>

  <%= f.label :gender, "Genre" %>
  <%= f.select :gender, ["Homme", "Femme"] %>

  <%= f.submit "S'inscrire" %>
<% end %>

